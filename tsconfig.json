{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",           // Compiled files will be output to the dist folder
    "rootDir": "./src",           // Your source code is in the src folder
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"                     // Include everything in the src directory
  ],
  "exclude": [
    "node_modules",                // Exclude node_modules and dist
    "dist"
  ]
}